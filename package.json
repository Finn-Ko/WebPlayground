{
  "name": "webplayground",
  "version": "1.0.0",
  "description": "Repo to play around and show of personal web projects based on Node.js",
  "scripts": {
    "dev": "tsx --watch --env-file .env src/server/index.ts & cd src/client && vite build --watch",
    "start": "node --env-file .env dist/server/index.js",
    "build": "tsc -p tsconfig.build.json && cd src/client && vite build",
    "build:server": "tsc -p tsconfig.build.json",
    "build:client": "cd src/client && vite build",
    "type-check": "tsc --noEmit -p tsconfig.build.json && cd src/client && vue-tsc --build",
    "lint": "eslint . && cd src/client && eslint .",
    "lint:fix": "eslint --fix . && cd src/client && eslint . --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest && cd src/client && vitest .",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "imports": {
    "#*": "./src/*"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --check"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Finn-Ko/WebPlayground.git"
  },
  "keywords": [],
  "author": "Finn Kockelke",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/Finn-Ko/WebPlayground/issues"
  },
  "homepage": "https://github.com/Finn-Ko/WebPlayground#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "prettier": "^3.6.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.8",
    "eslint": "^9.34.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.6"
  }
}
